{
    "compileOnSave": false,
    "compilerOptions": {
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "lib": ["webworker", "esnext", "dom"],
        "module": "ESNext",
        "target": "ES2019",
        "jsx": "react",
        "jsxFactory": "h",
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
